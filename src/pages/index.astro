---
import Logos from "../components/Logos.astro";
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout>
  <main class="container mx-auto px-4 py-2 md:py-8">
    <section
      class="mb-2 flex flex-col-reverse items-center gap-y-4 gap-x-10 md:flex-row md:items-center"
    >
      <div class="flex-1">
        <h1 class="font-bold">Hello, I'm Maeve ðŸ‘‹</h1>
        <p>
          Welcome to my portfolio. I'm a passionate developer focused on
          creating beautiful and functional web experiences. I bring ideas to
          life through clean code and thoughtful design.
        </p>
      </div>

      <div class="relative flex justify-center">
        <img
          src="/src/assets/maeve.png"
          alt="Maeve"
          class="max-h-60 rounded-2xl text-center greyscale"
        />
      </div>
    </section>

    <Logos class="md:py-24" />

    <section class="mb-16">
      <h2 class="text-3xl font-bold mb-8">What can I do?</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          [1, 2, 3].map((project) => (
            <div class="p-6 rounded-lg shadow-lg">
              <h3 class="text-xl font-bold mb-2">Project {project}</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                A brief description of the project and its key features.
              </p>
              <a
                href="#"
                class="inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors"
              >
                Learn More
              </a>
            </div>
          ))
        }
      </div>
    </section>

    <footer class="text-center text-gray-600 dark:text-gray-400">
      <p>Â© 2025</p>
    </footer>
  </main>
</Layout>
