---
import Layout from "../layouts/Layout.astro";
import ThemeIcon from "../components/ThemeIcon.astro";
---

<Layout title="WIP Portfolio">
  <ThemeIcon />
  <main class="container mx-auto px-4 py-8">
    <section class="text-center mb-16">
      <h1 class="text-4xl font-bold mb-4">Welcome to My Portfolio</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400">
        Frontend Developer & UI/UX Enthusiast
      </p>
    </section>

    <section class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold mb-4">About Me</h2>
        <p class="text-gray-600 dark:text-gray-400">
          I'm a passionate developer focused on creating beautiful and
          functional web experiences. With expertise in modern web technologies,
          I bring ideas to life through clean code and thoughtful design.
        </p>
      </div>

      <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
        <h2 class="text-2xl font-bold mb-4">Skills</h2>
        <ul class="space-y-2 text-gray-600 dark:text-gray-400">
          <li>• HTML, CSS, JavaScript</li>
          <li>• React, Vue, Astro</li>
          <li>• Tailwind CSS</li>
          <li>• Responsive Design</li>
          <li>• UI/UX Design</li>
        </ul>
      </div>
    </section>

    <section class="mb-16">
      <h2 class="text-3xl font-bold text-center mb-8">Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {
          [1, 2, 3].map((project) => (
            <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
              <h3 class="text-xl font-bold mb-2">Project {project}</h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4">
                A brief description of the project and its key features.
              </p>
              <a
                href="#"
                class="inline-block bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600 transition-colors"
              >
                Learn More
              </a>
            </div>
          ))
        }
      </div>
    </section>

    <section class="mb-16">
      <h2 class="text-3xl font-bold text-center mb-8">Latest Blog Posts</h2>
      <!-- <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {latestPosts.slice(0, 2).map((post) => (
          <article class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
            <h3 class="text-xl font-bold mb-2">
              <a href={`/blog/${post.slug}`} class="hover:text-blue-500 transition-colors">
                {post.data.title}
              </a>
            </h3>
            <p class="text-gray-600 dark:text-gray-400 mb-4">{post.data.description}</p>
            <div class="flex justify-between items-center text-sm text-gray-500 dark:text-gray-400">
              <span>{post.data.author}</span>
              <span>{post.data.pubDate.toLocaleDateString()}</span>
            </div>
          </article>
        ))}
      </div> -->
      <div class="text-center mt-8">
        <a
          href="/blog"
          class="inline-block bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors"
        >
          View All Posts
        </a>
      </div>
    </section>

    <footer class="text-center text-gray-600 dark:text-gray-400">
      <p>© 2024 My Portfolio. All rights reserved.</p>
    </footer>
  </main>
</Layout>
