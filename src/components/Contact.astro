<h1 class="text-3xl font-bold mb-20">Let's work together!</h1>
<div class="max-w-2xl mx-auto">
    <form
        class="space-y-6"
        action="https://formspree.io/f/mjkyvpak"
        method="POST"
    >
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
                <label for="name" class="block text-sm font-medium mb-2"
                    >Name</label
                >
                <input
                    type="text"
                    id="name"
                    name="name"
                    required
                    class="w-full px-4 py-2 rounded-lg bg-white/5 backdrop-blur-sm border border-gray-300 dark:border-grey focus:border-1 focus:outline-none focus:ring-2 focus:ring-gray-400/30 dark:focus:ring-grey/10 transition-all duration-300"
                />
            </div>
            <div>
                <label for="email" class="block text-sm font-medium mb-2"
                    >Email</label
                >
                <input
                    type="email"
                    id="email"
                    name="email"
                    required
                    class="w-full px-4 py-2 rounded-lg bg-white/5 backdrop-blur-sm border border-gray-300 dark:border-grey focus:border-1 focus:outline-none focus:ring-2 focus:ring-gray-400/30 dark:focus:ring-grey/10 transition-all duration-300"
                />
            </div>
        </div>
        <div>
            <label for="subject" class="block text-sm font-medium mb-2"
                >Subject</label
            >
            <input
                type="text"
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-2 rounded-lg bg-white/5 backdrop-blur-sm border border-gray-300 dark:border-grey focus:border-1 focus:outline-none focus:ring-2 focus:ring-gray-400/30 dark:focus:ring-grey/10 transition-all duration-300"
            />
        </div>
        <div>
            <label for="message" class="block text-sm font-medium mb-2"
                >Message</label
            >
            <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-2 rounded-lg bg-white/5 backdrop-blur-sm border border-gray-300 dark:border-grey focus:border-1 focus:outline-none focus:ring-2 focus:ring-gray-400/30 dark:focus:ring-grey/10 transition-all duration-300"
            ></textarea>
        </div>
        <div class="flex justify-end">
            <button
                type="submit"
                class="px-6 py-3 bg-white/10 hover:bg-white/20 backdrop-blur-sm rounded-lg font-medium transition-all duration-300 hover:shadow-lg border border-gray-300"
            >
                Send Message
            </button>
        </div>
    </form>
</div>
