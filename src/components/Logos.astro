---
import TechScroller from "./TechScroller.astro";

const frontEnd: string[] = [
    "angular",
    "astro",
    "react",
    "typescript",
    "tailwindcss",
    "html5",
    "css3",
    "javascript",
];

const backEnd: string[] = [
    "python",
    "django",
    "dotnet",
    "csharp",
    "java",
    "mysql",
    "nodejs",
    "aws",
];

const tools: string[] = [
    "vscode",
    "cursor",
    "git",
    "github",
    "bash",
    "figma",
    "unity",
];
---

<div class="relative overflow-x-hidden">
    <div
        class="pointer-events-none absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-[var(--background)] to-transparent z-20"
    >
    </div>
    <div
        class="pointer-events-none absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-[var(--background)] to-transparent z-20"
    >
    </div>

    <TechScroller technologies={frontEnd.concat(backEnd).concat(tools)} />
